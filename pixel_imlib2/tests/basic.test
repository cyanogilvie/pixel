# vim: ft=tcl foldmethod=marker foldmarker=<<<,>>> shiftwidth=4 ts=4

if {[lsearch [namespace children] ::tcltest] == -1} {
	package require tcltest 2.2.5
	namespace import ::tcltest::*
}

set ourdir	[file dirname [info script]]
set tmpdir	[makeDirectory tmp]

lappend ::auto_path	[file join / home cyan .tbuild repo pkg linux-glibc2.8-x86_64]
package require Pixel 3.1
package require Pixel_imlib2

test basic-1.1 {Load a jpeg} -body { #<<<
	set pmap	[pixel::imlib2::load_image [file join $ourdir test.jpg]]
	pixel::pmap_info $pmap
} -cleanup {
	if {[info exists pmap]} {
		unset pmap
	}
} -result {595 451}
#>>>
test basic-1.2 {Save a png, implicit filetype} -body { #<<<
	set pmap	[pixel::imlib2::load_image [file join $ourdir test.jpg]]
	pixel::imlib2::save_image $pmap [file join $tmpdir out.png]
	pixel::imlib2::save_image $pmap [file join /tmp out.png]
	file exists [file join $tmpdir out.png]
} -cleanup {
	if {[info exists pmap]} {
		unset pmap
	}
} -result {1}
#>>>
test basic-1.3 {Load saved png, and compare to reference} -body { #<<<
	set pmap1	[pixel::imlib2::load_image [file join $tmpdir out.png]]
	set pmap2	[pixel::imlib2::load_image [file join $ourdir reference.png]]
	set diff	[pixel::pmap_sub $pmap1 $pmap2]
	pixel::channel_histogram $diff
} -cleanup {
	if {[info exists pmap1]} {unset pmap1}
	if {[info exists pmap2]} {unset pmap2}
	if {[info exists diff]} {unset diff}
