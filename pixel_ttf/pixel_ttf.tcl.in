package require Pixel 3

package require Itcl 3.1
namespace import -force ::itcl::*

if {![info exists env(LD_LIBRARY_PATH)] || $env(LD_LIBRARY_PATH) == ""} {
	set env(LD_LIBRARY_PATH)	"/usr/lib/Pixel3"
} else {
	append env(LD_LIBRARY_PATH)	":/usr/lib/Pixel3"
}

load [file join $::pixel::ttf::library @PKG_LIB_FILE@]

namespace eval ::pixel::ttf {
	namespace export *

	variable version @PACKAGE_VERSION@.@EXTRA_VERSION@
}

package provide @PACKAGE_NAME@ $::pixel::ttf::version

